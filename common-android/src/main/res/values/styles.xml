<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/white00</item>
        <item name="colorOnPrimary">@color/gray800</item>
        <item name="colorPrimaryDark">@color/white00</item>
        <item name="colorAccent">@color/teal200</item>

        <item name="android:textColor">@color/white800</item>
        <item name="subtitleTextColor">@color/gray300</item>

        <item name="android:windowBackground">@color/white00</item>

        <item name="colorPrimarySurface">@color/white300</item>
        <item name="colorOnPrimarySurface">@color/gray300</item>

        <item name="colorSurface">@color/white50</item>
        <item name="colorOnSurface">@color/white500</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">@color/gray300</item>
        <item name="android:actionMenuTextColor">@color/gray300</item>
    </style>

    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="ThemeOverlay.Search.Input" parent="">
        <item name="colorPrimary">#8B8B8B</item>
    </style>
</resources>