        <item name="colorOnPrimary">@color/white00</item>
        <item name="colorPrimaryDark">@color/gray1000</item>
        <item name="colorAccent">@color/teal200</item>

        <item name="android:textColor">@color/white50</item>
        <item name="subtitleTextColor">@color/white800</item>

        <item name="android:windowBackground">@color/gray1000</item>

        <item name="colorPrimarySurface">@color/gray00</item>
        <item name="colorOnPrimarySurface">@color/gray300</item>

        <item name="colorSurface">@color/gray800</item>
        <item name="colorOnSurface">@color/white500</item>
